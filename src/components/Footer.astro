---
import linksData from "../content/nav-links/links.json";
const links = linksData.links;
---

<footer class="bg-gray-900 text-gray-400 border-t border-gray-800">
    <div class="container mx-auto px-6 py-10 grid md:grid-cols-3 gap-8">
        <!-- Brand -->
        <div>
            <h2 class="text-xl font-bold text-white mb-3">MySite</h2>
            <p class="text-sm">
                Building modern web experiences with performance and design in
                mind.
            </p>
        </div>

        <!-- Quick Links -->
        <div>
            <h3 class="text-white font-semibold mb-3">Quick Links</h3>
            <ul class="space-y-2">
                {
                    links.map((link) => (
                        <li>
                            <a
                                href={link.url}
                                class="hover:text-white transition"
                            >
                                {link.title}
                            </a>
                        </li>
                    ))
                }
            </ul>
        </div>

        <!-- Contact / Social -->
        <div>
            <h3 class="text-white font-semibold mb-3">Connect</h3>
            <p class="text-sm">contact@mysite.com</p>

            <div class="flex gap-4 mt-3">
                <a href="#" class="hover:text-white">Twitter</a>
                <a href="#" class="hover:text-white">GitHub</a>
                <a href="#" class="hover:text-white">LinkedIn</a>
            </div>
        </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 text-center py-4 text-sm">
        Â© {new Date().getFullYear()} MySite. All rights reserved.
    </div>
</footer>
